syntax on

set nocompatible
set modelines=0

set number
set ignorecase
set smartcase
set hlsearch
set incsearch
set autoindent
set showmode
set hidden
set wildmenu
set wildmode=list:longest
set visualbell
set encoding=utf8
set scrolloff=3
set nobackup
set nowb
set noswapfile
set ttyfast
set ruler
set backspace=indent,eol,start
set laststatus=2
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4

let mapleader = ","
set gdefault
set showmatch
nnoremap <leader><space> :noh<cr>

set wrap
set textwidth=79
set formatoptions=qrn1

set background=dark
if has("gui_running")
        set guifont=Inconsolata\ 13
endif


